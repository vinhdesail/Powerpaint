package gui;

import java.awt.Color;
import java.awt.Shape;

/**
 * The class to save all the 2d images.
 * 
 * @author vvien
 * @version 3.0
 */
public class DrawingStorage {
    
    /**
     * The shape that is being saved.
     */
    private final Shape myShape;
    
    /**
     * The color that relate to the shape.
     */
    private final Color myColor;
    
    /**
     * The width associated with the shape.
     */
    private final int myWidth;
    
    /**
     * The constructor for the class.
     * 
     * @param theShape The shape stored.
     * @param theColor The color associated with shape.
     * @param theWidth The width of the shape.
     */
    public DrawingStorage(final Shape theShape, final Color theColor, final int theWidth) {
        
        myShape = theShape;
        myColor = theColor;
        myWidth = theWidth;
    }
    
    /**
     * Get the shape.
     * 
     * @return myShape The shape.
     */
    public Shape getMyShape() {
        
        return myShape;
    }
    
    /**
     * Get the color.
     * 
     * @return myColor The color.
     */
    public Color getMyColor() {
        
        return myColor;
    }
    
    /**
     * Get the width.
     * 
     * @return myWidth The width.
     */
    public int getMyWidth() {
        
        return myWidth;
    }
    

}
